@model My_Portfolyo.Models.Admin.ProjectViewModel
@{
    Layout = null;
    var lang = ViewData["Lang"]?.ToString() ?? "tr";
    var currentLang = ViewData["CurrentLang"]?.ToString() ?? "tr";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Proje Ekle - Admin Panel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-light: #90EE90;
            --bg-dark: #0D1117;
            --glass-bg: rgba(22, 27, 34, 0.6);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: #E6EDF3;
            min-height: 100vh;
            padding: 2rem 0;
        }

        .form-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 1rem;
            padding: 2rem;
            backdrop-filter: blur(10px);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            color: #E6EDF3;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select, textarea.form-control {
            background: rgba(13, 17, 23, 0.8);
            border: 1px solid var(--glass-border);
            color: #E6EDF3;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
        }

        .form-control:focus, .form-select:focus, textarea.form-control:focus {
            background: rgba(13, 17, 23, 0.9);
            border-color: var(--primary-light);
            color: #E6EDF3;
            box-shadow: 0 0 0 0.2rem rgba(144, 238, 144, 0.25);
        }

        .btn-primary-custom {
            background: var(--primary-light);
            color: var(--bg-dark);
            border: none;
            font-weight: 700;
            padding: 0.75rem 2rem;
            border-radius: 0.5rem;
        }

        .btn-primary-custom:hover {
            background: #7dd87d;
            color: var(--bg-dark);
        }

        .btn-secondary-custom {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
            border: 1px solid var(--glass-border);
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        .help-text {
            font-size: 0.875rem;
            opacity: 0.7;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 style="color: var(--primary-light);">
                <i class="bi bi-plus-circle"></i> Yeni Proje Ekle (@(currentLang == "tr" ? "Türkçe" : "English"))
            </h3>
            <a href="/@lang/Admin/Projects?lang=@currentLang" class="btn btn-secondary-custom">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="form-card">
            <form method="post" asp-action="Create" asp-route-lang="@lang" asp-route-contentLang="@currentLang">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateRange" class="form-label">
                            <i class="bi bi-calendar"></i> Tarih Aralığı *
                        </label>
                        <input asp-for="DateRange" class="form-control" placeholder="Örn: 01.2025 - 06.2025" />
                        <span asp-validation-for="DateRange" class="text-danger"></span>
                        <div class="help-text">Örn: 01.2025 - 06.2025 veya 01.2025 - Devam ediyor</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ImageUrl" class="form-label">
                            <i class="bi bi-image"></i> Görsel URL
                        </label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <div class="help-text">Proje görselinin URL'i</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">
                        <i class="bi bi-type"></i> Başlık *
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Proje başlığı" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">
                        <i class="bi bi-text-paragraph"></i> Açıklama *
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Proje açıklaması"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GithubUrl" class="form-label">
                        <i class="bi bi-github"></i> GitHub URL
                    </label>
                    <input asp-for="GithubUrl" class="form-control" type="url" placeholder="https://github.com/..." />
                    <span asp-validation-for="GithubUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TagsInput" class="form-label">
                        <i class="bi bi-tags"></i> Etiketler
                    </label>
                    <input asp-for="TagsInput" class="form-control" placeholder="AI, Machine Learning, Python (virgülle ayırın)" />
                    <span asp-validation-for="TagsInput" class="text-danger"></span>
                    <div class="help-text">Etiketleri virgülle ayırın: AI, Machine Learning, Python</div>
                </div>

                <div class="mb-3">
                    <label for="ModalContent" class="form-label">
                        <i class="bi bi-file-text"></i> Modal İçeriği (HTML)
                    </label>
                    <textarea name="ModalContent" id="ModalContent" class="form-control" rows="10" placeholder="HTML içerik (her satır ayrı bir paragraf olarak kaydedilir)"></textarea>
                    <div class="help-text">HTML içerik. Her satır ayrı bir paragraf olarak kaydedilir.</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary-custom">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                    <a href="/@lang/Admin/Projects?lang=@currentLang" class="btn btn-secondary-custom">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
