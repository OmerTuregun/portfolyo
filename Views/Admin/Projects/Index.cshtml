@model List<My_Portfolyo.Models.Admin.ProjectViewModel>
@{
    Layout = null;
    var lang = ViewData["Lang"]?.ToString() ?? "tr";
    var currentLang = ViewData["CurrentLang"]?.ToString() ?? "tr";
    var username = Context.Session.GetString("AdminUsername") ?? "Admin";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeler Yönetimi - Admin Panel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-light: #90EE90;
            --bg-dark: #0D1117;
            --glass-bg: rgba(22, 27, 34, 0.6);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: #E6EDF3;
            min-height: 100vh;
        }

        .admin-navbar {
            background: var(--glass-bg);
            border-bottom: 1px solid var(--glass-border);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
            margin-bottom: 2rem;
        }

        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem 2rem;
        }

        .table-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 1rem;
            padding: 2rem;
            backdrop-filter: blur(10px);
        }

        .table {
            color: #E6EDF3;
        }

        .table thead th {
            border-bottom: 2px solid var(--glass-border);
            color: var(--primary-light);
            font-weight: 700;
        }

        .table tbody tr {
            border-bottom: 1px solid var(--glass-border);
        }

        .table tbody tr:hover {
            background: rgba(144, 238, 144, 0.1);
        }

        .btn-primary-custom {
            background: var(--primary-light);
            color: var(--bg-dark);
            border: none;
            font-weight: 700;
            padding: 0.5rem 1.5rem;
            border-radius: 0.5rem;
        }

        .btn-primary-custom:hover {
            background: #7dd87d;
            color: var(--bg-dark);
        }

        .btn-danger-custom {
            background: rgba(255, 107, 107, 0.2);
            color: #ff6b6b;
            border: 1px solid rgba(255, 107, 107, 0.3);
        }

        .btn-danger-custom:hover {
            background: rgba(255, 107, 107, 0.3);
            color: #ff6b6b;
        }

        .btn-secondary-custom {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
            border: 1px solid var(--glass-border);
        }

        .btn-secondary-custom:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #E6EDF3;
        }

        .lang-selector {
            display: inline-flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .lang-btn {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .lang-btn.active {
            background: var(--primary-light);
            color: var(--bg-dark);
        }

        .lang-btn:not(.active) {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
        }

        .lang-btn:not(.active):hover {
            background: rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body>
    <nav class="admin-navbar">
        <div class="admin-container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0" style="color: var(--primary-light);">
                        <i class="bi bi-folder-plus"></i> Projeler Yönetimi
                    </h3>
                    <small style="opacity: 0.7;">Hoş geldiniz, @username</small>
                </div>
                <div>
                    <a href="/@lang/Admin/Dashboard" class="btn btn-secondary-custom me-2">
                        <i class="bi bi-arrow-left"></i> Dashboard
                    </a>
                    <form method="post" asp-action="Logout" asp-controller="Admin" asp-route-lang="@lang" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn" style="background: rgba(255, 107, 107, 0.1); border: 1px solid rgba(255, 107, 107, 0.3); color: #ff6b6b;">
                            <i class="bi bi-box-arrow-right"></i> Çıkış
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="lang-selector">
                <a href="?lang=tr" class="lang-btn @(currentLang == "tr" ? "active" : "")">
                    <i class="bi bi-translate"></i> Türkçe
                </a>
                <a href="?lang=en" class="lang-btn @(currentLang == "en" ? "active" : "")">
                    <i class="bi bi-translate"></i> English
                </a>
            </div>
            <a href="/@lang/Admin/Projects/Create?lang=@currentLang" class="btn btn-primary-custom">
                <i class="bi bi-plus-circle"></i> Yeni Proje Ekle
            </a>
        </div>

        <div class="table-card">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Tarih Aralığı</th>
                            <th>Etiketler</th>
                            <th>GitHub</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.Id</td>
                                <td>@project.Title</td>
                                <td>@project.DateRange</td>
                                <td>
                                    @if (project.Tags != null && project.Tags.Any())
                                    {
                                        @foreach (var tag in project.Tags.Take(3))
                                        {
                                            <span class="badge" style="background: var(--primary-light); color: var(--bg-dark); margin-right: 0.25rem;">@tag</span>
                                        }
                                        @if (project.Tags.Count > 3)
                                        {
                                            <span class="text-muted">+@(project.Tags.Count - 3)</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(project.GithubUrl))
                                    {
                                        <a href="@project.GithubUrl" target="_blank" class="text-decoration-none" style="color: var(--primary-light);">
                                            <i class="bi bi-github"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/@lang/Admin/Projects/Edit/@project.Id?lang=@currentLang" class="btn btn-sm btn-secondary-custom">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <form method="post" asp-action="Delete" asp-route-id="@project.Id" asp-route-lang="@lang" asp-route-contentLang="@currentLang" style="display: inline;" onsubmit="return confirm('Bu projeyi silmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger-custom">
                                                <i class="bi bi-trash"></i> Sil
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: var(--primary-light); opacity: 0.5;"></i>
                    <p class="mt-3" style="opacity: 0.7;">Henüz proje eklenmemiş.</p>
                    <a href="/@lang/Admin/Projects/Create?lang=@currentLang" class="btn btn-primary-custom mt-3">
                        <i class="bi bi-plus-circle"></i> İlk Projeyi Ekle
                    </a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
