@model List<My_Portfolyo.Models.Admin.ExperienceSectionViewModel>
@{
    Layout = null;
    var lang = ViewData["Lang"]?.ToString() ?? "tr";
    var currentLang = ViewData["CurrentLang"]?.ToString() ?? "tr";
    var selectedType = ViewData["SelectedType"]?.ToString();
    var username = Context.Session.GetString("AdminUsername") ?? "Admin";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deneyimler Yönetimi - Admin Panel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-light: #90EE90;
            --bg-dark: #0D1117;
            --glass-bg: rgba(22, 27, 34, 0.6);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: #E6EDF3;
            min-height: 100vh;
        }

        .admin-navbar {
            background: var(--glass-bg);
            border-bottom: 1px solid var(--glass-border);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
            margin-bottom: 2rem;
        }

        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem 2rem;
        }

        .section-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 1rem;
            padding: 1.5rem;
            backdrop-filter: blur(10px);
            margin-bottom: 1.5rem;
        }

        .section-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--glass-border);
        }

        .section-title {
            color: var(--primary-light);
            font-weight: 700;
            font-size: 1.25rem;
            margin: 0;
        }

        .table {
            color: #E6EDF3;
        }

        .table thead th {
            border-bottom: 2px solid var(--glass-border);
            color: var(--primary-light);
            font-weight: 700;
        }

        .table tbody tr {
            border-bottom: 1px solid var(--glass-border);
        }

        .table tbody tr:hover {
            background: rgba(144, 238, 144, 0.1);
        }

        .btn-primary-custom {
            background: var(--primary-light);
            color: var(--bg-dark);
            border: none;
            font-weight: 700;
            padding: 0.5rem 1.5rem;
            border-radius: 0.5rem;
        }

        .btn-primary-custom:hover {
            background: #7dd87d;
            color: var(--bg-dark);
        }

        .btn-danger-custom {
            background: rgba(255, 107, 107, 0.2);
            color: #ff6b6b;
            border: 1px solid rgba(255, 107, 107, 0.3);
        }

        .btn-danger-custom:hover {
            background: rgba(255, 107, 107, 0.3);
            color: #ff6b6b;
        }

        .btn-secondary-custom {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
            border: 1px solid var(--glass-border);
        }

        .btn-secondary-custom:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #E6EDF3;
        }

        .lang-selector {
            display: inline-flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .lang-btn {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .lang-btn.active {
            background: var(--primary-light);
            color: var(--bg-dark);
        }

        .lang-btn:not(.active) {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
        }

        .type-filter {
            margin-bottom: 1.5rem;
        }

        .type-btn {
            padding: 0.5rem 1rem;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .type-btn.active {
            background: var(--primary-light);
            color: var(--bg-dark);
        }

        .type-btn:not(.active) {
            background: rgba(255, 255, 255, 0.1);
            color: #E6EDF3;
        }
    </style>
</head>
<body>
    <nav class="admin-navbar">
        <div class="admin-container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0" style="color: var(--primary-light);">
                        <i class="bi bi-briefcase-fill"></i> Deneyimler Yönetimi
                    </h3>
                    <small style="opacity: 0.7;">Hoş geldiniz, @username</small>
                </div>
                <div>
                    <a href="/@lang/Admin/Dashboard" class="btn btn-secondary-custom me-2">
                        <i class="bi bi-arrow-left"></i> Dashboard
                    </a>
                    <form method="post" asp-action="Logout" asp-controller="Admin" asp-route-lang="@lang" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn" style="background: rgba(255, 107, 107, 0.1); border: 1px solid rgba(255, 107, 107, 0.3); color: #ff6b6b;">
                            <i class="bi bi-box-arrow-right"></i> Çıkış
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="admin-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <div class="lang-selector">
                    <a href="?lang=tr@(selectedType != null ? $"&type={selectedType}" : "")" class="lang-btn @(currentLang == "tr" ? "active" : "")">
                        <i class="bi bi-translate"></i> Türkçe
                    </a>
                    <a href="?lang=en@(selectedType != null ? $"&type={selectedType}" : "")" class="lang-btn @(currentLang == "en" ? "active" : "")">
                        <i class="bi bi-translate"></i> English
                    </a>
                </div>
            </div>
            <a href="/@lang/Admin/Experience/Create?lang=@currentLang@(selectedType != null ? $"&type={selectedType}" : "")" class="btn btn-primary-custom">
                <i class="bi bi-plus-circle"></i> Yeni Deneyim Ekle
            </a>
        </div>

        <div class="type-filter">
            <a href="?lang=@currentLang" class="type-btn @(selectedType == null ? "active" : "")">Tümü</a>
            <a href="?lang=@currentLang&type=Eğitim" class="type-btn @(selectedType == "Eğitim" ? "active" : "")">Eğitim</a>
            <a href="?lang=@currentLang&type=İş Deneyimi" class="type-btn @(selectedType == "İş Deneyimi" ? "active" : "")">İş Deneyimi</a>
            <a href="?lang=@currentLang&type=Stajlar" class="type-btn @(selectedType == "Stajlar" ? "active" : "")">Stajlar</a>
            <a href="?lang=@currentLang&type=Diller" class="type-btn @(selectedType == "Diller" ? "active" : "")">Diller</a>
        </div>

        @if (Model != null && Model.Any())
        {
            @foreach (var section in Model)
            {
                @if (selectedType != null && section.Type != selectedType)
                {
                    continue;
                }

                var items = new List<My_Portfolyo.Models.Admin.ExperienceViewModel>();
                if (section.Items != null) items.AddRange(section.Items);
                if (section.Experience != null) items.AddRange(section.Experience);

                @if (items.Any())
                {
                    <div class="section-card">
                        <div class="section-header">
                            <h4 class="section-title">
                                <i class="bi bi-@(section.Type == "Eğitim" ? "book" : section.Type == "İş Deneyimi" ? "briefcase" : section.Type == "Stajlar" ? "briefcase-fill" : "globe")"></i>
                                @(section.Type)
                            </h4>
                            <a href="/@lang/Admin/Experience/Create?lang=@currentLang&type=@(section.Type)" class="btn btn-sm btn-primary-custom">
                                <i class="bi bi-plus-circle"></i> Yeni Ekle
                            </a>
                        </div>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Başlık</th>
                                    <th>Şirket/Kurum</th>
                                    <th>Tarih Aralığı</th>
                                    <th>Etiketler</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in items)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Company</td>
                                        <td>@item.DateRange</td>
                                        <td>
                                            @if (item.Tags != null && item.Tags.Any())
                                            {
                                                @foreach (var tag in item.Tags.Take(3))
                                                {
                                                    <span class="badge" style="background: var(--primary-light); color: var(--bg-dark); margin-right: 0.25rem;">@tag</span>
                                                }
                                                @if (item.Tags.Count > 3)
                                                {
                                                    <span class="text-muted">+@(item.Tags.Count - 3)</span>
                                                }
                                            }
                                            @if (item.Percentage.HasValue)
                                            {
                                                <span class="badge" style="background: rgba(144, 238, 144, 0.3); color: var(--primary-light);">@item.Percentage%</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/@lang/Admin/Experience/Edit/@item.Id?lang=@currentLang&type=@(section.Type)" class="btn btn-sm btn-secondary-custom">
                                                    <i class="bi bi-pencil"></i> Düzenle
                                                </a>
                                                <form method="post" asp-action="Delete" asp-route-id="@item.Id" asp-route-lang="@lang" asp-route-contentLang="@currentLang" asp-route-type="@(section.Type)" style="display: inline;" onsubmit="return confirm('Bu deneyimi silmek istediğinize emin misiniz?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger-custom">
                                                        <i class="bi bi-trash"></i> Sil
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        }
        else
        {
            <div class="section-card text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--primary-light); opacity: 0.5;"></i>
                <p class="mt-3" style="opacity: 0.7;">Henüz deneyim eklenmemiş.</p>
                <a href="/@lang/Admin/Experience/Create?lang=@currentLang" class="btn btn-primary-custom mt-3">
                    <i class="bi bi-plus-circle"></i> İlk Deneyimi Ekle
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
