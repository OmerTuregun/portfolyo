@{
    Layout = null;
    var username = ViewData["Username"]?.ToString() ?? "Admin";
    var currentLang = Context.Request.Query["lang"].ToString().ToLower();
    if (string.IsNullOrEmpty(currentLang) || (currentLang != "tr" && currentLang != "en"))
    {
        currentLang = "tr";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Portfolyo</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-light: #90EE90;
            --bg-dark: #0D1117;
            --glass-bg: rgba(22, 27, 34, 0.6);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: #E6EDF3;
            min-height: 100vh;
        }

        .admin-navbar {
            background: var(--glass-bg);
            border-bottom: 1px solid var(--glass-border);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
        }

        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .stat-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 1rem;
            padding: 1.5rem;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            height: 100%;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-light);
            box-shadow: 0 8px 24px rgba(144, 238, 144, 0.2);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            background: var(--primary-light);
            color: var(--bg-dark);
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 900;
            color: var(--primary-light);
            margin: 0.5rem 0;
        }

        .stat-label {
            color: #E6EDF3;
            opacity: 0.7;
            font-size: 0.9rem;
        }

        .action-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 1rem;
            padding: 2rem;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }

        .action-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-light);
            box-shadow: 0 8px 24px rgba(144, 238, 144, 0.2);
            color: inherit;
        }

        .action-icon {
            font-size: 3rem;
            color: var(--primary-light);
            margin-bottom: 1rem;
        }

        .btn-logout {
            background: rgba(255, 107, 107, 0.1);
            border: 1px solid rgba(255, 107, 107, 0.3);
            color: #ff6b6b;
            padding: 0.5rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

        .btn-logout:hover {
            background: rgba(255, 107, 107, 0.2);
            border-color: #ff6b6b;
        }
    </style>
</head>
<body>
    <nav class="admin-navbar">
        <div class="admin-container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0" style="color: var(--primary-light);">
                        <i class="bi bi-shield-check"></i> Admin Panel
                    </h3>
                    <small style="opacity: 0.7;">Hoş geldiniz, @username</small>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="btn-group" role="group">
                        <a href="?lang=tr" class="btn @(currentLang == "tr" ? "btn-primary" : "btn-outline-secondary")" style="background: @(currentLang == "tr" ? "var(--primary-light)" : "transparent"); color: @(currentLang == "tr" ? "var(--bg-dark)" : "#E6EDF3"); border-color: var(--glass-border);">
                            TR
                        </a>
                        <a href="?lang=en" class="btn @(currentLang == "en" ? "btn-primary" : "btn-outline-secondary")" style="background: @(currentLang == "en" ? "var(--primary-light)" : "transparent"); color: @(currentLang == "en" ? "var(--bg-dark)" : "#E6EDF3"); border-color: var(--glass-border);">
                            EN
                        </a>
                    </div>
                    <form method="post" asp-action="Logout" asp-route-lang="tr" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-logout">
                            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="admin-container">
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-folder"></i>
                    </div>
                    <div class="stat-number" id="projectCount">-</div>
                    <div class="stat-label">Projeler</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-briefcase"></i>
                    </div>
                    <div class="stat-number" id="experienceCount">-</div>
                    <div class="stat-label">Deneyimler</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-award"></i>
                    </div>
                    <div class="stat-number" id="certificateCount">-</div>
                    <div class="stat-label">Sertifikalar</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-globe"></i>
                    </div>
                    <div class="stat-number">2</div>
                    <div class="stat-label">Diller (TR/EN)</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4">
                <a asp-controller="AdminProjects" asp-action="Index" asp-route-lang="tr" asp-route-contentLang="@currentLang" class="action-card">
                    <div class="text-center">
                        <div class="action-icon">
                            <i class="bi bi-folder-plus"></i>
                        </div>
                        <h5>Projeler / Projects</h5>
                        <p class="mb-0" style="opacity: 0.7; font-size: 0.9rem;">Projeleri yönet / Manage projects</p>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <a asp-controller="AdminExperience" asp-action="Index" asp-route-lang="tr" asp-route-contentLang="@currentLang" class="action-card">
                    <div class="text-center">
                        <div class="action-icon">
                            <i class="bi bi-briefcase-fill"></i>
                        </div>
                        <h5>Deneyimler / Experiences</h5>
                        <p class="mb-0" style="opacity: 0.7; font-size: 0.9rem;">Deneyimleri yönet / Manage experiences</p>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <a asp-controller="AdminCertificates" asp-action="Index" asp-route-lang="tr" asp-route-contentLang="@currentLang" class="action-card">
                    <div class="text-center">
                        <div class="action-icon">
                            <i class="bi bi-award-fill"></i>
                        </div>
                        <h5>Sertifikalar / Certificates</h5>
                        <p class="mb-0" style="opacity: 0.7; font-size: 0.9rem;">Sertifikaları yönet / Manage certificates</p>
                    </div>
                </a>
            </div>
            <div class="col-md-6 col-lg-3 mb-4">
                <a asp-controller="AdminAbout" asp-action="Index" asp-route-lang="tr" asp-route-contentLang="@currentLang" class="action-card">
                    <div class="text-center">
                        <div class="action-icon">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <h5>Hakkımda / About Me</h5>
                        <p class="mb-0" style="opacity: 0.7; font-size: 0.9rem;">Hakkımda bilgilerini düzenle / Edit about me</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="stat-card">
                    <h5 class="mb-3"><i class="bi bi-info-circle"></i> Hızlı Bilgiler / Quick Info</h5>
                    <ul style="list-style: none; padding: 0;">
                        <li class="mb-2"><i class="bi bi-check-circle" style="color: var(--primary-light);"></i> Tüm değişiklikler otomatik olarak yedeklenir / All changes are automatically backed up</li>
                        <li class="mb-2"><i class="bi bi-check-circle" style="color: var(--primary-light);"></i> Türkçe ve İngilizce içerikler tek panelden yönetilir / Turkish and English content managed from single panel</li>
                        <li class="mb-2"><i class="bi bi-check-circle" style="color: var(--primary-light);"></i> Değişiklikler anında canlı siteye yansır / Changes are reflected immediately on the live site</li>
                        <li class="mb-2"><i class="bi bi-info-circle" style="color: var(--primary-light);"></i> Üstteki TR/EN butonları ile dil seçimi yapabilirsiniz / Use TR/EN buttons above to select language</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // İstatistikleri yükle (ileride API ile)
        // Şimdilik placeholder
        document.getElementById('projectCount').textContent = '8';
        document.getElementById('experienceCount').textContent = '4';
        document.getElementById('certificateCount').textContent = '10';
    </script>
</body>
</html>
