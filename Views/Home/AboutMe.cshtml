    <!-- Bootstrap & AOS Scriptleri -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- ANA SCRIPT (JSON'dan Veri Ã‡ekme) -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            AOS.init({
                duration: 600,
                once: true
            });
            
            fetchAboutData();
        });

        async function fetchAboutData() {
            try {
                const response = await fetch('/data/about.json');
                if (!response.ok) throw new Error('Veri alÄ±namadÄ±');
                
                const data = await response.json();
                
                // 1. HakkÄ±mda Metnini Doldur
                // (JSON'daki \n'leri <br>'ye Ã§evirerek paragraflarÄ± koru)
                document.getElementById('about-me-content').innerHTML = data.aboutMeText.replace(/\n/g, '<br />');
                
                // 2. Gelecek Hedefi Metnini Doldur
                document.getElementById('future-goal-content').innerHTML = data.futureGoalText.replace(/\n/g, '<br />');

                // 3. Sosyal Faaliyetleri (KÄ°HMED, Ä°zmitgÃ¼cÃ¼) Doldur
                const container = document.getElementById('social-activities-container');
                container.innerHTML = ''; // Temizle
                
                data.socialActivities.forEach((activity, index) => {
                    container.innerHTML += createSocialActivityHTML(activity, index);
                });

                // Ã–NEMLÄ°: ASP.NET Tag Helper'larÄ± (~) JS iÃ§inde Ã§alÄ±ÅŸmaz.
                // TÃ¼m resim yollarÄ±nÄ± manuel olarak dÃ¼zeltmemiz gerekiyor.
                fixImagePaths(container);

                setTimeout(() => { AOS.refresh(); }, 100);

            } catch (error) {
                console.error('HakkÄ±mda verisi yÃ¼klenirken hata:', error);
                document.getElementById('social-activities-container').innerHTML = '<p class="text-danger text-center">Ä°Ã§erik yÃ¼klenirken bir hata oluÅŸtu.</p>';
            }
        }
        
        // Sosyal Faaliyet KartÄ± (Carousel'li) HTML'ini oluÅŸturan fonksiyon
        function createSocialActivityHTML(activity, index) {
            
            // Carousel Ä°Ã§eriklerini (Resimleri) OluÅŸtur
            const carouselItemsHTML = activity.carouselImages.map((imgUrl, i) => `
                <div class="carousel-item ${i === 0 ? 'active' : ''}">
                    <img src="${imgUrl}" class="d-block w-100" alt="${activity.title} FotoÄŸraf ${i + 1}">
                </div>
            `).join('');
            
            // Carousel Kontrol ButonlarÄ±nÄ± (OklarÄ±) OluÅŸtur
            const carouselControlsHTML = `
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-${activity.id}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-${activity.id}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            `;
            
            // YazÄ± iÃ§eriÄŸini (description) oluÅŸtur
            const contentHTML = activity.description.join('\n');

            // 2 SÃ¼tunlu (Resim / YazÄ±) yapÄ±yÄ± oluÅŸtur
            return `
            <div class="row g-4 g-lg-5 mb-5 align-items-center" data-aos="fade-up" data-aos-delay="${index * 100}">
                
                <!-- SÃ¼tun 1: Carousel -->
                <div class="col-lg-6">
                    <div id="carousel-${activity.id}" class="carousel slide social-carousel" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            ${carouselItemsHTML}
                        </div>
                        ${carouselControlsHTML}
                    </div>
                </div>
                
                <!-- SÃ¼tun 2: AÃ§Ä±klama -->
                <div class="col-lg-6">
                    <div class="content-area">
                        <h2 class="display-6 fw-bold text-white mb-3">${activity.title}</h2>
                        ${contentHTML}
                    </div>
                </div>
            </div>
            `;
        }

        // JS iÃ§inde '~/img/...' yollarÄ±nÄ± '/img/...' olarak dÃ¼zelten fonksiyon
        function fixImagePaths(container) {
            const images = container.querySelectorAll('img');
            images.forEach(img => {
                let src = img.getAttribute('src');
                if (src && src.startsWith('~/')) {
                    img.setAttribute('src', src.substring(1)); // '~' karakterini kaldÄ±r
                }
            });
        }
    </script>
    
