        <section id="page-header" class="text-center py-4" data-aos="fade-up">
            <h1 class="display-5 fw-bold text-white">HakkÄ±mda & Sosyal Faaliyetler</h1>
            <p class="lead text-white-50">Kodun arkasÄ±ndaki kiÅŸi.</p>
        </section>
        
        <!-- 1. BÃ¶lÃ¼m: HakkÄ±mda (Cam Kart) -->
        <section id="about-me-text" class="mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="glass-card">
