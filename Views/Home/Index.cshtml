@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Portfolyo v2</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons (Ok ikonu ve servis ikonları için) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Google Font (Inter) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

    <style>
        /* --- 1. TEMA VE RENK PALETİ --- */
        :root {
            --bg-dark: #0D1117; /* Ana Koyu Arka Plan */
            --accent-green: #90EE90; /* Fıstık Yeşili (Canlı) */
            --text-on-accent: #0D1117; /* Yeşil Kart Üzerindeki Koyu Metin */
            --card-glass: rgba(30, 37, 48, 0.7); /* "Cam" Kart Rengi */
            --border-glass: rgba(255, 255, 255, 0.1); /* "Cam" Kart Kenarlığı */
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            background-color: var(--bg-dark);
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
            position: relative;
        }

        /* --- 2. STICKY NAVBAR (HEADER) --- */
        #mainNavbar {
            position: sticky;
            top: 1rem; /* Sayfanın üstünden 1rem boşluklu */
            z-index: 1020;
            margin: 0 1rem; /* Kenarlardan boşluklu */
        }

        #mainNavbar .container-fluid {
             background-color: rgba(30, 37, 48, 0.85); /* Hafif transparan */
             backdrop-filter: blur(10px); /* Buğulaştırma (Glassmorphism) */
             border: 1px solid var(--border-glass);
             border-radius: 12px; /* Yuvarlatılmış kenar */
        }

        .navbar-brand {
            color: var(--accent-green);
            font-weight: 700;
        }
        .nav-link {
            color: #f0f0f0;
            font-weight: 500;
        }
        .nav-link.active, .nav-link:hover {
            color: var(--accent-green);
        }
        .navbar-toggler {
            border-color: var(--border-glass);
        }
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.7%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* --- 3. HERO ALANI (FISTIK YEŞİLİ KART) --- */
        #hero {
            padding-top: 5rem; /* Navbar'dan sonra boşluk */
        }

        .hero-card {
            background-color: var(--accent-green);
            color: var(--text-on-accent);
            border-radius: 24px;
            padding: 2rem;
            overflow: hidden; /* Resim taşmasın diye */
        }

        .hero-text h2 {
            font-size: 1.25rem;
            font-weight: 700;
        }
        .hero-text h1 {
            font-size: 4rem;
            font-weight: 900;
            margin: 0.5rem 0 1.5rem 0;
            line-height: 1.1;
        }

        .btn-dark-accent {
            background-color: var(--text-on-accent);
            color: var(--accent-green);
            font-weight: 700;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }
        .btn-dark-accent:hover {
            background-color: #fff;
            color: var(--text-on-accent);
            transform: translateY(-3px);
        }

        .hero-image-frame {
          width: 280px;
          height: 280px;

          @@media (min-width: 992px) {
            width: 350px;
            height: 350px;
          }

          position: relative;
          margin: 0 auto;
          border-radius: 50%; 
          overflow: hidden;
          border: 5px solid var(--primary-light);
          background-color: #333;
          z-index: 2;
        }

        .hero-image-frame img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .hero-image-frame::before {
          content: '';
          position: absolute;
          width: 110%;
          height: 110%;
          top: -5%;
          left: -5%;
          border: 2px dashed var(--primary-light);
          border-radius: 50%;
          animation: spin 30s linear infinite;
          z-index: -1;
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* --- 4. YETENEK ALANI (PROGRESS BARS) --- */
        #expertise {
            padding: 6rem 0;
        }
        .skill-item {
            margin-bottom: 1.5rem;
        }
        .skill-item h4 {
            color: #f0f0f0;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }
        .progress {
            height: 10px;
            background-color: var(--card-glass);
            border-radius: 5px;
        }
        .progress-bar {
            background-color: var(--accent-green);
            width: 0%; /* GÜNCELLENDİ: Başlangıçta 0 olacak */
            transition: width 1s ease-in-out; /* GÜNCELLENDİ: Animasyon için */
        }

        /* --- 5. SERVİS ALANI (CAM KARTLAR) --- */
        #services {
            padding: 4rem 0 6rem 0;
        }

        .service-card {
            background-color: var(--card-glass);
            border: 1px solid var(--border-glass);
            border-radius: 16px;
            backdrop-filter: blur(5px);
            padding: 2rem;
            height: 100%; /* Kartların aynı yükseklikte olmasını sağlar */
            transition: transform 0.3s ease;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-card .icon {
            font-size: 2.5rem;
            color: var(--accent-green);
            margin-bottom: 1rem;
        }
        .service-card h3 {
            color: #fff;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .service-card ul {
            list-style-type: none;
            padding-left: 0;
            color: #ccc;
        }
        .service-card ul li {
            position: relative;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
        }
        /* Liste başına "check" ikonu */
        .service-card ul li::before {
            content: '\F26E'; /* Bootstrap Icon Check */
            font-family: 'bootstrap-icons';
            position: absolute;
            left: 0;
            color: var(--accent-green);
        }

    </style>
</head>

