    <!-- YENİ: Progress Bar Animasyonu için JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const skillBars = document.querySelectorAll('.progress-bar');

            const options = {
                root: null, // viewport
                rootMargin: '0px',
                threshold: 0.5 // %50'si görününce tetikle
            };

            const observer = new IntersectionObserver(function(entries, observer) {
                entries.forEach(entry => {
                    // entry.isIntersecting: Öğe ekrana girdi mi?
                    if (entry.isIntersecting) {
                        const bar = entry.target;
                        const targetWidth = bar.getAttribute('data-width');

                        // Genişliği ayarla (CSS transition animasyonu tetikleyecek)
                        bar.style.width = targetWidth;

                        // Animasyon bir kez çalışsın, gözlemciyi kaldır
                        observer.unobserve(bar);
                    }
                });
            }, options);

            // Her bir progress bar'ı gözlemle
            skillBars.forEach(bar => {
                observer.observe(bar);
            });
        });
    </script>

</body>
