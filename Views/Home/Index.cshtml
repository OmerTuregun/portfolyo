                        <h2 class="display-5 fw-bold text-white">Referanslarım</h2>
                    </div>
                </div>

                <!-- Referans Kartları Buraya JS ile Gelecek -->
                <div class="row g-4" id="references-container">
                    <!-- Yükleniyor... (JS ile temizlenecek) -->
                </div>
            </div>
        </section>

        <!-- ==== 4. PROJELER (JSON'DAN GELECEK) ==== -->
        <section id="projects" class="py-5">
            <div class="container" data-aos="fade-up">
                <!-- Başlık alanı -->
                <div class="row mb-4 align-items-center">
                    <div class="col-md-8">
                        <h2 class="display-5 fw-bold text-white">Son Projelerim</h2>
                        <p class="lead text-white-50">Üzerinde çalıştığım bazı güncel projeler.</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <a asp-controller="Home" asp-action="Projects" class="btn btn-primary-light">
                            Tümünü Gör <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>

                <!-- PROJELER BURAYA JS İLE GELECEK -->
                <div class="row g-4" id="home-projects-container">
                    <!-- JS Tarafından Doldurulacak -->
                </div>
            </div>
        </section>

    </div> <!-- .container biter -->
    
    <!-- ==== PROJE DETAY MODALI (GİZLİ) ==== -->
    <div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background-color: transparent; border:none;">
                <!-- Modal'ın "cam" görünümünü zorla veriyoruz -->
                <div class="glass-card" style="border-width: 2px; border-color: rgba(255,255,255,0.3);">
                    <div class="modal-header border-0">
                        <h5 class="modal-title text-white fw-bold" id="projectModalTitle">Proje Başlığı</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-white-50">
                        <img src="" id="projectModalImage" class="img-fluid rounded mb-3" alt="Proje Görseli">
                        <div id="projectModalTags" class="d-flex flex-wrap gap-2 mb-3">
                            <!-- Etiketler buraya JS ile gelecek -->
                        </div>
                        <div id="projectModalContent">
                            <!-- Detaylı içerik buraya JS ile gelecek -->
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <a href="#" id="projectModalGithubLink" class="btn btn-primary-light" target="_blank">
                            <i class="bi bi-github me-2"></i> GitHub'da Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- ==== SCRIPT DOSYALARI ==== -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- ==== ANASAYFAYA ÖZEL JAVASCRIPT ==== -->
    <script>
        // Tüm projeleri tutacağımız global değişken
        let allProjects = [];
        let allExperience = [];
        let allReferences = [];

        // Sayfa yüklendiğinde çalışacak ana fonksiyonlar
        document.addEventListener('DOMContentLoaded', () => {
            AOS.init({
                duration: 800,
                once: true
            });

            initAnimatedProgressBars();
            fetchProjects();
            fetchExperience();
            fetchReferences();
            fetchAboutTeaser();

            // Modal tetiklendiğinde veriyi doldur
            const projectModal = document.getElementById('projectModal');
            projectModal.addEventListener('show.bs.modal', (event) => {
                const projectId = event.relatedTarget.getAttribute('data-project-id');
                const project = allProjects.find(p => p.id == projectId);
                if (project) {
                    populateProjectModal(project);
                }
            });
        });

        // Progress Barları Ekrana Gelince Doldurma Fonksiyonu
        function initAnimatedProgressBars() {
            const progressBars = document.querySelectorAll('.progress-bar');
            
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const bar = entry.target;
                        const targetWidth = bar.getAttribute('data-width');
                        bar.style.width = targetWidth;
                        observer.unobserve(bar);
                    }
                });
            }, { threshold: 0.5 }); // Çubuğun %50'si görününce tetiklen

            progressBars.forEach(bar => {
                observer.observe(bar);
            });
        }
        
        // JSON'dan Projeleri Çekme Fonksiyonu
        async function fetchProjects() {
            try {
                const response = await fetch('/data/projects.json');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                allProjects = await response.json();
                
                // ANASAYFA İÇİN: Sadece ilk 3 projeyi al
                const projectsToShow = allProjects.slice(0, 3); 
                
                const container = document.getElementById('home-projects-container');
                container.innerHTML = ''; // Temizle
                
                projectsToShow.forEach(project => {
                    container.innerHTML += createProjectCardHTML(project);
                });

                AOS.refresh();

            } catch (error) {
                console.error('Projeler yüklenirken hata oluştu:', error);
                document.getElementById('home-projects-container').innerHTML = '<p class="text-danger">Projeler yüklenemedi.</p>';
            }
        }

        // ==== createProjectCardHTML FONKSİYONUNUN TAMAMINI BUNUNLA DEĞİŞTİR ====
        function createProjectCardHTML(project) {
            const tagsHTML = project.tags.map(tag => `<li>${tag}</li>`).join('');

            // GitHub linkini oluşturan logic (değişmedi)
            const githubLinkHTML = project.githubUrl
                ? `<a href="${project.githubUrl}" class="project-github-link" target="_blank" onclick="event.stopPropagation()">
                    <i class="bi bi-github"></i>
                </a>`
                : ''; 

            // ---- YENİ HTML YAPISI BURADA ----
            return `
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="${(project.id % 3 + 1) * 100}">
                <div class="glass-card card-hover w-100 p-0 project-card-clickable" 
                    data-bs-toggle="modal" 
                    data-bs-target="#projectModal" 
                    data-project-id="${project.id}">

                    <img src="${project.imageUrl}" class="project-card-img" alt="${project.title}">
                    
                    <!-- 
                        Kart gövdesini dikey flex container yaptık (d-flex flex-column).
                        flex-grow-1 ile kartın kalan tüm yüksekliğini doldurmasını sağladık.
                    -->
                    <div class="project-card-body d-flex flex-column flex-grow-1">
                        
                        <!-- Bu üst kısım (başlık, açıklama) en üste yaslanır -->
                        <div>
                            <h4 class="text-white fw-bold">${project.title}</h4>
                            <p class="text-white-50 mb-3">${project.description}</p>
                        </div>
                        
                        <!-- 
                            mt-auto (margin-top: auto) sihri, bu div'i 
                            flex container'ın (project-card-body) en dibine iter.
                        -->
                        <div class="mt-auto">
                            <!-- Bu bizim yeni yatay flex wrapper'ımız -->
                            <div class="project-card-footer">
                                
                                <!-- Sol Taraf: Tag'ler (sığdığı kadar genişler) -->
                                <ul class="project-tags">
                                    ${tagsHTML}
                                </ul>
                                
                                <!-- Sağ Taraf: GitHub ikonu (sabit durur) -->
                                ${githubLinkHTML}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            `;
        }

        // Modalı Veriyle Dolduran Fonksiyon
        function populateProjectModal(project) {
            
            document.getElementById('projectModalTitle').innerText = project.dateRange || 'Proje Detayı';

            document.getElementById('projectModalImage').src = project.imageUrl;
            
            const githubLinkButton = document.getElementById('projectModalGithubLink');
            if (project.githubUrl) {
                githubLinkButton.href = project.githubUrl;
                githubLinkButton.style.display = 'inline-block'; 
            } else {
                githubLinkButton.style.display = 'none'; 
            }

            const tagsContainer = document.getElementById('projectModalTags');
            tagsContainer.innerHTML = '';
            project.tags.forEach(tag => {
                tagsContainer.innerHTML += `<span class="badge" style="background-color: rgba(144, 238, 144, 0.1); color: var(--primary-light); border: 1px solid rgba(144, 238, 144, 0.3); padding: 0.4rem 0.6rem; font-weight: 500;">${tag}</span>`;
            });

            const contentContainer = document.getElementById('projectModalContent');
            
            contentContainer.innerHTML = ''; 
            
            contentContainer.innerHTML += `<h4 class="text-white fw-bold mb-2">${project.title}</h4>`;
            
            contentContainer.innerHTML += project.modalContent.join('');
        }

        async function fetchExperience() {
            try {
                const response = await fetch('/data/experience.json');
                if (!response.ok) {
                    throw new Error('Deneyim verisi alınamadı');
                }
                allExperience = await response.json();
                
                // ANASAYFA İÇİN: Sadece "İş Deneyimi" grubunu bul ve ilk 3'ünü al
                const workExperienceGroup = allExperience.find(group => group.type === "İş Deneyimi");
                let experiencesToShow = [];

                if (workExperienceGroup && workExperienceGroup.experience) {
                    experiencesToShow = workExperienceGroup.experience.slice(0, 3);
                }
                
                const container = document.getElementById('mini-timeline-container');
                container.innerHTML = ''; // Temizle
                
                experiencesToShow.forEach((exp, index) => {
                    container.innerHTML += createMiniTimelineCardHTML(exp, index);
                });

                // Veri yüklendikten sonra AOS'u yenile (animasyon için)
                AOS.refresh();

            } catch (error) {
                console.error('Deneyimler yüklenirken hata oluştu:', error);
                document.getElementById('mini-timeline-container').innerHTML = '<p class="text-danger">Deneyimler yüklenemedi.</p>';
            }
        }

        function createMiniTimelineCardHTML(exp, index) {
            return `
            <!-- Mini Zaman Tüneli Kartı -->
            <div class="mini-timeline-card-wrapper" data-aos="fade-up" data-aos-delay="${(index + 1) * 100}">
                <div class="glass-card">
                    <div class="mini-timeline-date">${exp.dateRange}</div>
                    <h5 class="mini-timeline-title">${exp.title}</h5>
                    <div class="mini-timeline-company">${exp.company}</div>
                </div>
            </div>
            `;
        }

        async function fetchReferences() {
            try {
                const response = await fetch('/data/references.json');
                if (!response.ok) {
                    throw new Error('Referans verisi alınamadı');
                }
                allReferences = await response.json();
                
                const container = document.getElementById('references-container');
                container.innerHTML = ''; // Temizle
                
                allReferences.forEach((ref, index) => {
                    container.innerHTML += createReferenceCardHTML(ref, index);
                });

                AOS.refresh();

            } catch (error) {
                console.error('Referanslar yüklenirken hata oluştu:', error);
                container.innerHTML = '<p class="text-danger text-center">Referanslar yüklenemedi.</p>';
            }
        }

        function createReferenceCardHTML(ref, index) {
            // 4'lü grid için col-lg-3, 3'lü için col-lg-4 kullan
            return `
            <div class="col-lg-3 col-md-6 reference-card-wrapper" data-aos="fade-up" data-aos-delay="${(index + 1) * 100}">
                <div class="reference-card">
                    <div class="reference-name">${ref.name}</div>
                    <div class="reference-title">${ref.title}</div>
                    <div class="reference-company">${ref.company}</div>
                </div>
            </div>
            `;
        }

        async function fetchAboutTeaser() {
            try {
                const response = await fetch('/data/about.json');
                if (!response.ok) throw new Error('Hakkımda verisi alınamadı');
                
                const data = await response.json();
                const container = document.getElementById('about-teaser-card');
                
                // "Hakkımda" metnini al ve ilk cümlesini (veya 150 karakter) "fragman" yap
                let teaserText = data.aboutMeText;
                if (teaserText.length > 150) {
                    teaserText = teaserText.substring(0, 150) + "...";
                }

                container.innerHTML = `
                    <div class="pe-lg-5 mb-4 mb-lg-0">
                        <h2 class="display-6 fw-bold text-white mb-3">Hakkımda</h2>
                        <p class="lead text-white-50">${teaserText}</p>
                    </div>
                    <a asp-controller="Home" asp-action="AboutMe" class="btn btn-primary-light flex-shrink-0">
                        Daha Fazlasını Oku <i class="bi bi-arrow-right-short"></i>
                    </a>
                `;
                
                // ÖNEMLİ: ASP.NET Tag Helper'ları (asp-action) JS içinde çalışmaz.
                // Linki manuel olarak düzeltmemiz gerekiyor.
                container.querySelector('a').href = '/tr/Home/AboutMe'; 

            } catch (error) {
                console.error('Hakkımda fragmanı yüklenirken hata oluştu:', error);
                container.innerHTML = '<p class="text-danger">Hakkımda bölümü yüklenemedi.</p>';
            }
        }

    </script>
</body>
</html>
