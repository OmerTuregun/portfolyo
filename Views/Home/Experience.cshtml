                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Projects">Projeler</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Experience">Deneyim</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">ƒ∞leti≈üim</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- ==== ANA ƒ∞√áERƒ∞K ==== -->
    <main class="container mt-4">
        
        <!-- Sayfa Ba≈ülƒ±ƒüƒ± -->
        <section id="page-header" class="mb-4">
            <div class="row g-4 align-items-stretch">
                
                <!-- Sol S√ºtun: Ba≈ülƒ±k -->
                <div class="col-lg-8" data-aos="fade-right">
                    <h1 class="display-5 fw-bold text-white mb-3">Deneyim & Eƒüitim</h1>
                    <p class="lead text-white-50">
                        Profesyonel kariyer yolculuƒüum ve akademik ge√ßmi≈üim.
                    </p>
                </div>
                
                <!-- Saƒü S√ºtun: Diller Kartƒ± Buraya JS ile Gelecek -->
                <div class="col-lg-4 d-flex align-items-stretch" id="language-card-container" data-aos="fade-left" data-aos-delay="100">
                    <!-- Diller kartƒ± JS ile buraya y√ºklenecek -->
                </div>

            </div>
        </section>
        
        <!-- Zaman T√ºneli (Timeline) -->
        <section class="timeline-container" id="experience-timeline-container">
            <!-- Deneyimler ve Eƒüitim buraya JS ile y√ºklenecek -->
        </section>

    </main>
    
    <!-- ==== FOOTER ==== -->
    <footer class="footer">
        <div class="container text-center">
            <span class="text-muted">¬© @DateTime.Now.Year √ñmer Faruk T√ºreg√ºn. T√ºm haklarƒ± saklƒ±dƒ±r.</span>
        </div>
    </footer>
    
    <!-- Bootstrap & AOS Scriptleri -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- ANA SCRIPT (JSON'dan Veri √áekme) -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Animasyonlarƒ± ba≈ülat
            AOS.init({
                duration: 600,
                once: true
            });
            
            // Veriyi √ßek ve HTML'i olu≈ütur
            fetchExperienceData();
        });

        // ==== ESKƒ∞ "fetchExperienceData" FONKSƒ∞YONUNU Sƒ∞Lƒ∞P BUNU EKLE ====

        async function fetchExperienceData() {
            try {
                const response = await fetch('/data/experience.json');
                if (!response.ok) throw new Error('Veri alƒ±namadƒ±');
                
                const data = await response.json();
                const timelineContainer = document.getElementById('experience-timeline-container');
                const languageContainer = document.getElementById('language-card-container');
                
                timelineContainer.innerHTML = ''; // Zaman t√ºnelini temizle
                languageContainer.innerHTML = ''; // Diller kartƒ±nƒ± temizle

                // JSON'daki her bir grubu (Eƒüitim, ƒ∞≈ü, Staj, Diller) i≈üle
                data.forEach(group => {
                    
                    // ---- YENƒ∞ LOGIC BURADA ----
                    // Eƒüer grup "Diller" ise, onu SAƒû √úST S√úTUNA (languageContainer) at
                    if (group.type === 'Diller') {
                        const items = group.items;
                        languageContainer.innerHTML = createLanguageCardHTML(items);
                    } 
                    // Deƒüilse (Eƒüitim, ƒ∞≈ü, Staj), onu ANA ZAMAN T√úNELƒ∞NE (timelineContainer) at
                    else {
                        // Grup Ba≈ülƒ±ƒüƒ± (√∂rn: "ƒ∞≈ü Deneyimi")
                        timelineContainer.innerHTML += `
                            <div class="timeline-group-header" data-aos="fade-right">
                                <h2>${group.type}</h2>
                            </div>
                        `;
                        
                        // Grup i√ßindeki item'larƒ± i≈üle
                        const items = group.experience || group.items;
                        items.forEach((item, index) => {
                            const iconClass = group.type === 'Eƒüitim' ? 'bi-mortarboard-fill' : 'bi-briefcase-fill';
                            timelineContainer.innerHTML += createTimelineItemHTML(item, iconClass, index);
                        });
                    }
                    // ---- /YENƒ∞ LOGIC Bƒ∞TTƒ∞ ----
                });

                setTimeout(() => { AOS.refresh(); }, 100);

            } catch (error) {
                console.error('Deneyim verisi y√ºklenirken hata:', error);
                document.getElementById('experience-timeline-container').innerHTML = '<p class="text-danger text-center">Deneyimler y√ºklenirken bir hata olu≈ütu.</p>';
            }
        }

        function createLanguageCardHTML(items) {
            
            const listItemsHTML = items.map(item => `
                <li class="language-list-item">
                    <div class="language-header">
                        <!-- Bayrak (D√úZELTƒ∞LMƒ∞≈û HTML) -->
                        <span class="language-flag">
                            <span class="flag-icon flag-icon-${item.flagCode}"></span>
                        </span>
                        <!-- Ba≈ülƒ±k ve Seviye -->
                        <div class="language-info">
                            <span class="language-title">${item.title}</span>
                            <span class="language-level">${item.description}</span>
                        </div>
                    </div>
                    <!-- Progress Bar -->
                    <div class="language-progress-bar">
                        <div class="language-progress" style="--progress-width: ${item.percentage}%;"></div>
                    </div>
                </li>
            `).join('');

            return `
            <div class="language-card">
                <h5 class="text-white fw-bold mb-3">Diller</h5>
                <ul class="language-list">
                    ${listItemsHTML}
                </ul>
            </div>
            `;
        }

        // 2. Zaman T√ºneli Kartƒ±nƒ± olu≈üturan fonksiyon (DEƒûƒ∞≈ûMEDƒ∞)
        function createTimelineItemHTML(item, iconClass, index) {
            let tagsHTML = '';
            if (item.tags && item.tags.length > 0) {
                tagsHTML = `
                    <ul class="timeline-tags">
                        ${item.tags.map(tag => `<li>${tag}</li>`).join('')}
                    </ul>
                `;
            }
            return `
            <div class="timeline-item" data-aos="fade-up" data-aos-delay="${index * 100}">
                <div class="timeline-icon">
                    <i class="bi ${iconClass}"></i>
                </div>
                <div class="timeline-card">
                    <div class="timeline-date">${item.dateRange}</div>
                    <h4 class="timeline-title">${item.title}</h4>
                    <h5 class="timeline-company">${item.company}</h5>
                    <p class="timeline-description">${item.description}</p>
                    ${tagsHTML}
                </div>
            </div>
            `;
        }

    </script>
    
</body>
</html>