    <!-- ANA CSS STƒ∞LLERƒ∞ -->
    <style>
        :root {
            --bg-dark: #0D1117;
            --bg-glass: rgba(30, 41, 59, 0.5); /* Yarƒ± ≈üeffaf cam */
            --border-glass: rgba(56, 68, 87, 0.5);
            --text-light: #E6EDF3;
            --text-muted: #8B949E;
            --primary-light: #90EE90; /* Fƒ±stƒ±k Ye≈üili */
            --text-on-accent: #0D1117; /* Ye≈üilin √ºst√ºndeki koyu yazƒ± */
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-light);
            line-height: 1.7;
        }

        /* Navbar */
        .navbar {
            background-color: var(--bg-glass) !important;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            margin: 1rem;
        }
            .navbar .nav-link {
                color: var(--text-muted);
                font-weight: 500;
                transition: all 0.2s ease-in-out;
            }
                .navbar .nav-link:hover,
                .navbar .nav-link.active {
                    color: var(--text-light);
                }
        .navbar-brand {
            font-weight: 700;
            color: var(--text-light);
        }

        /* Genel Ba≈ülƒ±k Stilleri */
        .display-5, .display-6 {
            color: var(--text-light);
        }

        /* Kart Stilleri */
        .glass-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            transition: all 0.3s ease;
        }

        #page-header {
            padding: 2rem 0;
        }

        /*
         * ==== Dƒ∞KEY ZAMAN T√úNELƒ∞ (TIMELINE) STƒ∞LLERƒ∞ ====
         */
        .timeline-container {
            position: relative;
            padding: 2rem 0;
        }
            /* Ortadaki dikey √ßizgi */
            .timeline-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 1.5rem; /* ƒ∞konlarƒ±n merkezi */
                height: 100%;
                width: 3px;
                background-color: var(--border-glass);
                border-radius: 3px;
            }

        .timeline-group-header {
            margin-top: 1rem;
            margin-bottom: 1.5rem;
            position: relative; /* √áizginin √ºst√ºnde kalsƒ±n */
        }
            .timeline-group-header h2 {
                background-color: var(--primary-light);
                color: var(--text-on-accent);
                font-weight: 700;
                font-size: 1.5rem;
                padding: 0.5rem 1rem;
                border-radius: 0.5rem;
                display: inline-block;
            }
        
        /* Her bir deneyim satƒ±rƒ± */
        .timeline-item {
            position: relative;
            margin-bottom: 2rem;
            padding-left: 4rem; /* ƒ∞kon + bo≈üluk i√ßin yer a√ß */
        }

        /* Zaman t√ºneli ikonu (√áanta veya Okul) */
        .timeline-icon {
            position: absolute;
            left: 0;
            top: 0.1rem;
            width: 3rem;  /* √áizgi merkezi 1.5rem'deydi */
            height: 3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--bg-glass);
            border: 2px solid var(--border-glass);
            border-radius: 50%;
            z-index: 10;
        }
            .timeline-icon i {
                font-size: 1.25rem;
                color: var(--primary-light); /* Ye≈üil ikon */
            }

        /* Asƒ±l i√ßerik kartƒ± */
        .timeline-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
            .timeline-card:hover {
                transform: translateY(-5px);
                border-color: rgba(144, 238, 144, 0.4);
            }

        .timeline-date {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--primary-light); /* Ye≈üil tarih */
            margin-bottom: 0.25rem;
        }
        .timeline-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.1rem;
        }
        .timeline-company {
            font-size: 1.1rem;
            color: var(--text-muted);
            font-weight: 500;
            margin-bottom: 0.75rem;
        }
        .timeline-description {
            color: var(--text-light);
            margin-bottom: 1rem;
        }
        
        /* Teknoloji Etiketleri (Tag'ler) */
        .timeline-tags {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
            .timeline-tags li {
                font-size: 0.85rem;
                font-weight: 500;
                background-color: rgba(144, 238, 144, 0.1);
                color: var(--primary-light);
                border: 1px solid rgba(144, 238, 144, 0.2);
                padding: 0.3rem 0.6rem;
                border-radius: 0.5rem;
            }

        /* Footer */
        .footer {
            border-top: 1px solid var(--border-glass);
            padding: 2rem 0;
            margin-top: 2rem;
            color: var(--text-muted);
        }

        .language-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            padding: 1.5rem;
            height: 100%;
        }
        .language-list {
            list-style: none;
            padding-left: 0;
            margin-bottom: 0;
            display: flex;      /* Yan yana diz */
            flex-wrap: wrap;    /* SIƒûMAZSA ALT SATIRA AT (√á√ñZ√úM BU) */
            gap: 1rem;          /* Aralarƒ±na bo≈üluk */
        }

        .language-list-item {
            flex-grow: 1;         /* B√ºy√ºyebildikleri kadar b√ºy√ºs√ºnler */
            flex-basis: 200px;    /* Ama en az 200px'lik yerleri olsun (Sƒ±ƒümazlarsa bu sayede alt alta ge√ßerler) */
        }
            
        .language-list-item:last-child {
            margin-bottom: 0; 
        }

        .language-header {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        /* Bayrak ikonu i√ßin d√ºzeltilmi≈ü stil */
        .language-flag {
            font-size: 1.25rem; /* Bayrak boyutu */
            margin-right: 0.75rem;
            border-radius: 50%;
            overflow: hidden;
            width: 20px; /* Sabit geni≈ülik */
            height: 20px; /* Sabit y√ºkseklik */
            line-height: 20px; /* Dikey hizalama */
        }
            .language-flag .flag-icon {
                width: 100%;
                height: 100%;
            }

        .language-info {
            flex-grow: 1;
        }
        .language-title {
            font-size: 1.1rem;
            color: var(--text-light);
            font-weight: 700;
        }
        .language-level {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-left: 0.5rem;
        }

        /* Progress Bar Stilleri */
        .language-progress-bar {
            width: 100%;
            height: 6px;
            background-color: var(--bg-glass); /* Bar'ƒ±n arka planƒ± */
            border-radius: 3px;
            overflow: hidden;
        }
        .language-progress {
            height: 100%;
            background-color: var(--primary-light); /* Ye≈üil dolgu */
            width: 0%; /* Animasyon i√ßin ba≈ülangƒ±√ß */
            transition: width 1s ease-out 0.3s; /* Gecikmeli animasyon */
        }

        /* D√úZELTME: Kart g√∂r√ºnd√ºƒü√º anda animasyonu tetikle (AOS'a gerek yok) */
        .language-card .language-progress {
            width: var(--progress-width, 0%);
        }
    </style>
</head>
<body>
    
    <!-- ==== STICKY NAVBAR ==== -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                √ñmer Faruk T√úREG√úN
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
