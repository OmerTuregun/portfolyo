            font-weight: 400;
            color: #E6EDF3 !important;
            opacity: 0.7;
        }

        #projectModalContent h4 {
            font-size: 1.5rem;
        }

        /* ==== Main Button Style ==== */
        .btn-primary-light {
            background-color: var(--primary-light);
            color: var(--text-on-accent);
            border: 0;
            font-weight: 700;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }
        .btn-primary-light:hover {
            background-color: #fff;
            color: var(--text-on-accent);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(144, 238, 144, 0.2);
        }

        /* Mini Timeline Styles */
        .mini-timeline-container {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .mini-timeline-card-wrapper .glass-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            padding: 1.5rem;
            transition: all 0.3s ease;
            height: 100%;
        }
            .mini-timeline-card-wrapper .glass-card:hover {
                transform: translateY(-5px);
                border-color: rgba(144, 238, 144, 0.4);
            }
        .mini-timeline-date {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--primary-light);
            margin-bottom: 0.25rem;
        }
        .mini-timeline-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.1rem;
        }
        .mini-timeline-company {
            font-size: 1rem;
            color: var(--text-muted);
        }

        @@media (min-width: 992px) {
            .mini-timeline-container {
                flex-direction: row;
                justify-content: space-between;
            }
            .mini-timeline-card-wrapper {
                width: 100%;
                display: flex;
                align-items: stretch;
            }
        }

        .reference-card-wrapper {
            display: flex;
            align-items: stretch;
        }
        .reference-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1rem;
            padding: 1.5rem;
            width: 100%;
            display: flex;
            flex-direction: column;
        }
        .reference-name {
