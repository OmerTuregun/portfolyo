    <!-- ==== SCRIPT FILES ==== -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- ==== HOMEPAGE SPECIFIC JAVASCRIPT ==== -->
    <script>
        // Global variable to hold all projects
        let allProjects = [];
        let allExperience = [];
        let allReferences = [];

        // Main functions to run when page loads
        document.addEventListener('DOMContentLoaded', () => {
            AOS.init({
                duration: 800,
                once: true
            });

            initAnimatedProgressBars();
            fetchProjects();
            fetchExperience();
            fetchReferences();
            fetchAboutTeaser();

            // Fill data when modal is triggered
            const projectModal = document.getElementById('projectModal');
            projectModal.addEventListener('show.bs.modal', (event) => {
                const projectId = event.relatedTarget.getAttribute('data-project-id');
                const project = allProjects.find(p => p.id == projectId);
                if (project) {
                    populateProjectModal(project);
                }
            });
        });

        // Function to Fill Progress Bars When Visible on Screen
        function initAnimatedProgressBars() {
            const progressBars = document.querySelectorAll('.progress-bar');
            
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const bar = entry.target;
                        const targetWidth = bar.getAttribute('data-width');
                        bar.style.width = targetWidth;
                        observer.unobserve(bar);
                    }
                });
            }, { threshold: 0.5 });

            progressBars.forEach(bar => {
                observer.observe(bar);
            });
        }
        
        // Function to Fetch Projects from JSON
        async function fetchProjects() {
            try {
                const response = await fetch('/data-en/projects.json');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                allProjects = await response.json();
                
                // FOR HOMEPAGE: Get only first 3 projects
                const projectsToShow = allProjects.slice(0, 3); 
                
                const container = document.getElementById('home-projects-container');
                container.innerHTML = ''; // Clear
                
                projectsToShow.forEach(project => {
                    container.innerHTML += createProjectCardHTML(project);
                });

                AOS.refresh();

            } catch (error) {
                console.error('Error loading projects:', error);
                document.getElementById('home-projects-container').innerHTML = '<p class="text-danger">Projects could not be loaded.</p>';
            }
        }

        function createProjectCardHTML(project) {
            const tagsHTML = project.tags.map(tag => `<li>${tag}</li>`).join('');

            // GitHub linkini oluşturan logic
            const githubLinkHTML = project.githubUrl
                ? `<a href="${project.githubUrl}" class="project-github-link" target="_blank" onclick="event.stopPropagation()">
                    <i class="bi bi-github"></i>
                </a>`
                : ''; 

            // ---- GÜNCEL HTML YAPISI (Görsel etiketi silinmiştir) ----
            return `
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="${(project.id % 3 + 1) * 100}">
                <div class="glass-card card-hover w-100 p-0 project-card-clickable" 
                    data-bs-toggle="modal" 
                    data-bs-target="#projectModal" 
                    data-project-id="${project.id}">

                    <div class="project-card-body d-flex flex-column flex-grow-1">
                        
                        <div>
                            <h4 class="text-white fw-bold">${project.title}</h4>
                            <p class="text-white-50 mb-3">${project.description}</p>
                        </div>
                        
                        <div class="mt-auto">
                            <div class="project-card-footer">
                                
                                <ul class="project-tags">
                                    ${tagsHTML}
                                </ul>
                                
                                ${githubLinkHTML}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            `;
        }

        // Function to Fill Modal with Data
        function populateProjectModal(project) {
            
            document.getElementById('projectModalTitle').innerText = project.dateRange || 'Project Details';

            
            const githubLinkButton = document.getElementById('projectModalGithubLink');
            if (project.githubUrl) {
                githubLinkButton.href = project.githubUrl;
                githubLinkButton.style.display = 'inline-block'; 
            } else {
                githubLinkButton.style.display = 'none'; 
            }

            const tagsContainer = document.getElementById('projectModalTags');
            tagsContainer.innerHTML = '';
            project.tags.forEach(tag => {
                tagsContainer.innerHTML += `<span class="badge" style="background-color: rgba(144, 238, 144, 0.1); color: var(--primary-light); border: 1px solid rgba(144, 238, 144, 0.3); padding: 0.4rem 0.6rem; font-weight: 500;">${tag}</span>`;
            });

            const contentContainer = document.getElementById('projectModalContent');
            
            contentContainer.innerHTML = ''; 
            
            contentContainer.innerHTML += `<h4 class="text-white fw-bold mb-2">${project.title}</h4>`;
            
            contentContainer.innerHTML += project.modalContent.join('');
        }

        async function fetchExperience() {
            try {
                const response = await fetch('/data-en/experience.json');
                if (!response.ok) {
                    throw new Error('Experience data could not be retrieved');
                }
                allExperience = await response.json();
                
                // FOR HOMEPAGE: Find only "Work Experience" group and get first 3
                const workExperienceGroup = allExperience.find(group => group.type === "İş Deneyimi" || group.type === "Work Experience");
                let experiencesToShow = [];

                if (workExperienceGroup && workExperienceGroup.experience) {
                    experiencesToShow = workExperienceGroup.experience.slice(0, 3);
                }
                
                const container = document.getElementById('mini-timeline-container');
                container.innerHTML = ''; // Clear
                
                experiencesToShow.forEach((exp, index) => {
                    container.innerHTML += createMiniTimelineCardHTML(exp, index);
                });

                // Refresh AOS after data is loaded (for animation)
                AOS.refresh();

            } catch (error) {
                console.error('Error loading experiences:', error);
                document.getElementById('mini-timeline-container').innerHTML = '<p class="text-danger">Experiences could not be loaded.</p>';
            }
        }

        function createMiniTimelineCardHTML(exp, index) {
            return `
            <!-- Mini Timeline Card -->
            <div class="mini-timeline-card-wrapper" data-aos="fade-up" data-aos-delay="${(index + 1) * 100}">
                <div class="glass-card">
                    <div class="mini-timeline-date">${exp.dateRange}</div>
                    <h5 class="mini-timeline-title">${exp.title}</h5>
                    <div class="mini-timeline-company">${exp.company}</div>
                </div>
            </div>
            `;
        }

        async function fetchReferences() {
            try {
                const response = await fetch('/data-en/references.json');
                if (!response.ok) {
                    throw new Error('Reference data could not be retrieved');
                }
                allReferences = await response.json();
                
                const container = document.getElementById('references-container');
                container.innerHTML = ''; // Clear
                
                allReferences.forEach((ref, index) => {
                    container.innerHTML += createReferenceCardHTML(ref, index);
                });

                AOS.refresh();

            } catch (error) {
                console.error('Error loading references:', error);
                container.innerHTML = '<p class="text-danger text-center">References could not be loaded.</p>';
            }
        }

        function createReferenceCardHTML(ref, index) {
            // Use col-lg-3 for 4-column grid, col-lg-4 for 3-column
            return `
            <div class="col-lg-3 col-md-6 reference-card-wrapper" data-aos="fade-up" data-aos-delay="${(index + 1) * 100}">
                <div class="reference-card">
                    <div class="reference-name">${ref.name}</div>
                    <div class="reference-title">${ref.title}</div>
                    <div class="reference-company">${ref.company}</div>
                </div>
            </div>
            `;
        }

        async function fetchAboutTeaser() {
            try {
                const response = await fetch('/data-en/about.json');
                if (!response.ok) throw new Error('About data could not be retrieved');
                
                const data = await response.json();
                const container = document.getElementById('about-teaser-card');
                
                // Get "About Me" text and make first sentence (or 150 characters) a "teaser"
                let teaserText = data.aboutMeText;
                if (teaserText.length > 150) {
                    teaserText = teaserText.substring(0, 150) + "...";
                }

                container.innerHTML = `
                    <div class="pe-lg-5 mb-4 mb-lg-0">
                        <h2 class="display-6 fw-bold text-white mb-3">About Me</h2>
                        <p class="lead text-white-50">${teaserText}</p>
                    </div>
                    <a asp-controller="Home" asp-action="AboutMe" class="btn btn-primary-light flex-shrink-0">
                        Read More <i class="bi bi-arrow-right-short"></i>
                    </a>
                `;
                
                // IMPORTANT: ASP.NET Tag Helpers (asp-action) don't work inside JS.
                // We need to fix the link manually.
                container.querySelector('a').href = '/Home/AboutMe'; 

            } catch (error) {
                console.error('Error loading about teaser:', error);
                container.innerHTML = '<p class="text-danger">About section could not be loaded.</p>';
            }
        }

    </script>
</body>
