        /* ==== CONTACT FORM STYLES ==== */
        .form-control-glass {
            background: var(--bg-glass) !important;
            border: 1px solid var(--border-glass) !important;
            border-radius: 0.75rem !important;
            color: var(--text-light) !important;
            padding: 0.75rem 1rem !important;
            font-size: 0.9rem;
        }

            .form-control-glass::placeholder {
                color: var(--text-muted) !important;
            }

            .form-control-glass:focus {
                background: rgba(30, 41, 59, 0.8) !important;
                box-shadow: 0 0 0 3px rgba(144, 238, 144, 0.3) !important; /* Green focus */
            }

        /* Form labels */
        .form-label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        /* Submit Button */
        .btn-primary-light {
            background-color: var(--primary-light);
            color: var(--text-on-accent);
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 700;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
        }

            .btn-primary-light:hover {
                background-color: #79db79; /* Slightly darker green */
                color: var(--text-on-accent);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(144, 238, 144, 0.2);
            }

        /* ==== SOCIAL MEDIA BUTTONS (NEW) ==== */
        .social-buttons-container {
            display: flex;
            flex-wrap: wrap; /* Wrap to next line if doesn't fit */
            gap: 0.75rem; /* Space between buttons */
        }

        .social-btn {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            text-decoration: none;
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 0.75rem;
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
            .social-btn i {
                /* Icon color green */
