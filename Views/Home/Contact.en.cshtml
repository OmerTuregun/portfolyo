    <script>
        // Start AOS Animations
        AOS.init({
            duration: 600,
            once: true,
            easing: 'ease-in-out-quad',
        });
    </script>

    <!-- ==== ADD THIS AT THE BOTTOM OF PAGE (INSTEAD OF OLD SCRIPT) ==== -->
    <script>
        var form = document.getElementById("my-form");
        
        async function handleSubmit(event) {
            event.preventDefault();
            var status = document.getElementById("my-form-status");
            var data = new FormData(event.target);
            
            // Lock button and write "Sending..."
            var submitButton = form.querySelector('button[type="submit"]');
            submitButton.disabled = true;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...';

            // Clear previous message and remove animation classes
            status.innerHTML = '';
            status.classList.remove('fade-in', 'fade-out');

            fetch(event.target.action, {
            method: form.method,
            body: data,
            headers: {
                'Accept': 'application/json'
            }
            }).then(response => {
            // Unlock button
            submitButton.disabled = false;
            submitButton.innerHTML = 'Send Message <i class="bi bi-send-fill ms-2"></i>';

            if (response.ok) {
                // Show new message and fade-in
                status.innerHTML = '<div class="alert alert-success" style="background-color: var(--primary-light); color: var(--text-on-accent); border: 0; font-weight: 500;">Thank you! I received your message and will get back to you as soon as possible.</div>';
                status.classList.add('fade-in'); // Make it appear slowly
                form.reset(); 
                
                // Fade-out after 3 seconds and completely hide after animation ends
                setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out'); // Make it disappear slowly
                    
                    // Wait for animation duration (0.5s) and clear content
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500); // Should match CSS transition duration
                }, 3000); // Start fading after 3 seconds

            } else {
                response.json().then(data => {
                let errorMessage = 'An error occurred, please try again later.';
                if (Object.hasOwn(data, 'errors')) {
                    errorMessage = data["errors"].map(error => error["message"]).join(", ");
                }
                status.innerHTML = `<div class="alert alert-danger">${errorMessage}</div>`;
                status.classList.add('fade-in');
                setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out');
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500);
                }, 5000); // Error message stays a bit longer
                })
            }
            }).catch(error => {
            submitButton.disabled = false;
            submitButton.innerHTML = 'Send Message <i class="bi bi-send-fill ms-2"></i>';
            status.innerHTML = '<div class="alert alert-danger">A network error occurred, please check your internet connection.</div>';
            status.classList.add('fade-in');
            setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out');
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500);
                }, 5000);
            });
        }
        form.addEventListener("submit", handleSubmit)
    </script>
