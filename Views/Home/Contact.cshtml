@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İletişim - Ömer Faruk Türegün</title>

    <!-- Bootstrap CSS ve Ikonlar -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!-- AOS (Animasyon) CSS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
        /* ==== ANA STİLLER ==== */
        :root {
            --bg-dark: #0D1117; /* Ana koyu arka plan */
            --bg-glass: rgba(30, 41, 59, 0.5); /* Cam kart arka planı */
            --border-glass: rgba(148, 238, 144, 0.2); /* Cam kart kenarlığı */
            --primary-light: #90EE90; /* Fıstık Yeşili Vurgu */
            --text-on-accent: #0D1117; /* Vurgu üstü yazı (koyu) */
            --text-light: #E6EDF3; /* Ana yazı rengi (Beyaz) */
            --text-muted: #8B949E; /* Soluk yazı (Gri) */
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
            overflow-x: hidden; /* Yatay kaydırmayı engelle */
        }

        /* Ana başlık stili (YAZILIM GELİŞTİRİCİ gibi) */
        .page-title {
            font-size: 3.5rem;
            line-height: 1.1;
            font-weight: 900;
            color: var(--text-light);
            margin: 0.5rem 0 1.5rem;
        }

        @@media (min-width: 992px) {
            .page-title {
                font-size: 4.5rem;
            }
        }

        /* ==== NAVBAR ==== */
        .navbar-sticky {
            position: sticky;
            top: 1rem;
            z-index: 1020;
            margin: 1rem auto;
            width: 95%;
            max-width: 700px;
        }

        .navbar-glass {
            background: var(--bg-glass);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-glass);
            border-radius: 1.5rem;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

            .navbar-glass .nav-link {
                color: var(--text-muted);
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .navbar-glass .nav-link:hover,
                .navbar-glass .nav-link.active {
                    color: var(--primary-light);
                }

        /* ==== 'GLASS' KART ==== */
        .glass-card {
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 1.5rem;
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            height: 100%;
        }

        /* ==== 'HERO' KART (Fıstık Yeşili) ==== */
        .hero-card {
            background-color: var(--primary-light);
            color: var(--text-on-accent);
            padding: 2rem;
            border-radius: 1.5rem;
            margin-bottom: 2rem;
        }

        /* ==== İLETİŞİM FORMU STİLLERİ ==== */
        .form-control-glass {
            background: var(--bg-glass) !important;
            border: 1px solid var(--border-glass) !important;
            border-radius: 0.75rem !important;
            color: var(--text-light) !important;
            padding: 0.75rem 1rem !important;
            font-size: 0.9rem;
        }

            .form-control-glass::placeholder {
                color: var(--text-muted) !important;
            }

            .form-control-glass:focus {
                background: rgba(30, 41, 59, 0.8) !important;
                box-shadow: 0 0 0 3px rgba(144, 238, 144, 0.3) !important; /* Yeşil odaklama */
            }

        /* Form etiketleri */
        .form-label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        /* Gönder Butonu */
        .btn-primary-light {
            background-color: var(--primary-light);
            color: var(--text-on-accent);
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 700;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
        }

            .btn-primary-light:hover {
                background-color: #79db79; /* Biraz daha koyu yeşil */
                color: var(--text-on-accent);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(144, 238, 144, 0.2);
            }

        /* ==== SOSYAL MEDYA BUTONLARI (YENİ) ==== */
        .social-buttons-container {
            display: flex;
            flex-wrap: wrap; /* Sığmazsa alt satıra atar */
            gap: 0.75rem; /* Butonlar arası boşluk */
        }

        .social-btn {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            text-decoration: none;
            background: var(--bg-glass);
            border: 1px solid var(--border-glass);
            border-radius: 0.75rem;
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
            .social-btn i {
                /* İkon rengi yeşil */
                color: var(--primary-light);
                font-size: 1.1rem;
                margin-right: 0.5rem;
            }
            .social-btn:hover {
                background: rgba(30, 41, 59, 0.8);
                border-color: rgba(144, 238, 144, 0.5);
                color: var(--text-light);
                transform: translateY(-2px);
            }

        /* Form Durum Mesajı için Fade Animasyonları */
        #my-form-status {
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            text-align: center;
        }

        #my-form-status.fade-in {
            opacity: 1;
        }

        #my-form-status.fade-out {
            opacity: 0;
        }

        #my-form-status .alert {
            width: 100%;
            margin-bottom: 0;
            padding: 0.75rem 1.25rem;
        }
    </style>
</head>
<body>

    <!-- ==== NAVBAR ==== -->
    <nav class="navbar navbar-expand-sm navbar-glass navbar-sticky">
        <div class="container-fluid">
            <!-- Anasayfa Linki -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color: var(--text-light); font-weight: 700; font-size: 1.25rem;">
                Ömer Faruk Türegün
            </a>
            <!-- Mobil Toggle Butonu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color: var(--text-light);"></span>
            </button>
            <!-- Menü Linkleri -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Linkler anasayfadaki bölümlere geri döner -->
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="expertise">Yetenekler</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Experience">Deneyim</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Projects">Projeler</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Contact">İletişim</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ==== ANA İÇERİK ==== -->
    <main class="container my-5">
        <div class="text-center" data-aos="fade-up">
            <h1 class="page-title">İLETİŞİME GEÇ</h1>
            <p class="lead text-white-50 mb-5">
                Benimle çalışmak, bir proje hakkında konuşmak veya sadece merhaba demek için formu kullanabilirsiniz.
            </p>
        </div>

        <div class="row g-4">

            <!-- SOL SÜTUN: Form Alanı (FORM GÖNDERME İÇİN GÜNCELLENDİ) -->
            <div class="col-lg-7" data-aos="fade-right" data-aos-delay="100">
                <div class="glass-card p-4 p-md-5">
                    
                    <!-- 1. FORM ETİKETİ GÜNCELLENDİ (id, action, method) -->
                    <form id="my-form" action="https://formspree.io/f/xvgvvblj" method="POST">
                        
                        <div class="mb-3">
                            <label for="name" class="form-label">Ad Soyad</label>
                            <!-- 2. 'name' ÖZELLİĞİ EKLENDİ -->
                            <input type="text" class="form-control form-control-glass" id="name" name="AdSoyad" placeholder="Adınız Soyadınız" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresiniz</label>
                            <!-- 2. 'name' ÖZELLİĞİ EKLENDİ -->
                            <input type="email" class="form-control form-control-glass" id="email" name="email" placeholder="mail@adresiniz.com" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Mesajınız</label>
                            <!-- 2. 'name' ÖZELLİĞİ EKLENDİ -->
                            <textarea class="form-control form-control-glass" id="message" name="mesaj" rows="6" placeholder="Bana bir mesaj bırakın..." required></textarea>
                        </div>
                        
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary-light">
                                Mesajı Gönder <i class="bi bi-send-fill ms-2"></i>
                            </button>
                        </div>
                        
                        <!-- 3. FORM DURUM MESAJI EKLENDİ (Script'in aradığı ID) -->
                        <p id="my-form-status" class="mt-3 text-center"></p>

                    </form>
                </div>
            </div>

            <!-- SAĞ SÜTUN: Bilgiler ve Sosyal Medya -->
            <div class="col-lg-5" data-aos="fade-left" data-aos-delay="200">

                <!-- Fıstık Yeşili Bilgi Kartı -->
                <div class="hero-card">
                    <h4 class="fw-bold">İletişim Bilgileri</h4>
                    <p class="mb-2">Benimle doğrudan iletişime geçmek için:</p>
                    <ul class="list-unstyled mb-0" style="color: var(--text-on-accent);">
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2"></i>
                            <strong>trkuraf@gmail.com</strong>
                        </li>
                        <li>
                            <i class="bi bi-telephone-fill me-2"></i>
                            <strong>+90 538 603 22 71</strong>
                        </li>
                    </ul>
                </div>

                <!-- Sosyal Medya Linkleri (Yeni Butonlar) -->
                <h4 class="text-white fw-bold mt-4 mb-3">Sosyal Medya</h4>
                <div class="social-buttons-container">
                    <a href="https://www.linkedin.com/in/%C3%B6mer-faruk-t%C3%BCreg%C3%BCn-6360532b6/" target="_blank" class="social-btn">
                        <i class="bi bi-linkedin"></i> LinkedIn
                    </a>
                    <a href="https://github.com/OmerTuregun" target="_blank" class="social-btn">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                    <a href="https://medium.com/@@trkuraf" target="_blank" class="social-btn">
                        <i class="bi bi-medium"></i> Medium
                    </a>
                    <a href="https://www.kaggle.com/merfaruktregn" target="_blank" class="social-btn">
                        <i class="bi bi-kanban-fill"></i> Kaggle
                    </a>
                    <a href="https://www.hackerrank.com/profile/trkuraf" target="_blank" class="social-btn">
                        <i class="bi bi-terminal-fill"></i> HackerRank
                    </a>
                    <a href="https://x.com/o_farukturegun?t=mbXcTQaEbZrD8qd3_8wZaA&s=09" target="_blank" class="social-btn">
                        <i class="bi bi-twitter-x"></i> X (Twitter)
                    </a>
                    <a href="https://www.instagram.com/omerfarukturegun?igsh=b2kwOXllcmVlcGVq" target="_blank" class="social-btn">
                        <i class="bi bi-instagram"></i> Instagram
                    </a>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS (Animasyon) JS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        // AOS Animasyonlarını Başlat
        AOS.init({
            duration: 600,
            once: true,
            easing: 'ease-in-out-quad',
        });
    </script>

    <!-- ==== BUNU SAYFANIN EN ALTINA EKLE (ESKİ SCRIPT'İN YERİNE) ==== -->
    <script>
        var form = document.getElementById("my-form");
        
        async function handleSubmit(event) {
            event.preventDefault();
            var status = document.getElementById("my-form-status");
            var data = new FormData(event.target);
            
            // Butonu kilitle ve "Gönderiliyor..." yaz
            var submitButton = form.querySelector('button[type="submit"]');
            submitButton.disabled = true;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Gönderiliyor...';

            // Önceki mesajı temizle ve animasyon sınıflarını kaldır
            status.innerHTML = '';
            status.classList.remove('fade-in', 'fade-out');

            fetch(event.target.action, {
            method: form.method,
            body: data,
            headers: {
                'Accept': 'application/json'
            }
            }).then(response => {
            // Butonu geri aç
            submitButton.disabled = false;
            submitButton.innerHTML = 'Mesajı Gönder <i class="bi bi-send-fill ms-2"></i>';

            if (response.ok) {
                // Yeni mesajı göster ve fade-in yap
                status.innerHTML = '<div class="alert alert-success" style="background-color: var(--primary-light); color: var(--text-on-accent); border: 0; font-weight: 500;">Teşekkürler mesajınızı aldım, en kısa sürede size dönüş sağlayacağım.</div>';
                status.classList.add('fade-in'); // Yavaşça görünmesini sağla
                form.reset(); 
                
                // 3 saniye sonra fade-out yap ve animasyon bitince tamamen gizle
                setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out'); // Yavaşça kaybolmasını sağla
                    
                    // Animasyon süresi (0.5s) kadar bekleyip içeriği boşalt
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500); // CSS transition süresiyle aynı olmalı
                }, 3000); // 3 saniye sonra kaybolmaya başlasın

            } else {
                response.json().then(data => {
                let errorMessage = 'Bir hata oluştu, lütfen daha sonra tekrar deneyin.';
                if (Object.hasOwn(data, 'errors')) {
                    errorMessage = data["errors"].map(error => error["message"]).join(", ");
                }
                status.innerHTML = `<div class="alert alert-danger">${errorMessage}</div>`;
                status.classList.add('fade-in');
                setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out');
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500);
                }, 5000); // Hata mesajı biraz daha uzun kalsın
                })
            }
            }).catch(error => {
            submitButton.disabled = false;
            submitButton.innerHTML = 'Mesajı Gönder <i class="bi bi-send-fill ms-2"></i>';
            status.innerHTML = '<div class="alert alert-danger">Bir ağ hatası oluştu, lütfen internet bağlantınızı kontrol edin.</div>';
            status.classList.add('fade-in');
            setTimeout(() => {
                    status.classList.remove('fade-in');
                    status.classList.add('fade-out');
                    setTimeout(() => {
                        status.innerHTML = '';
                        status.classList.remove('fade-out');
                    }, 500);
                }, 5000);
            });
        }
        form.addEventListener("submit", handleSubmit)
    </script>
</body>
</html>

