    <!-- ==== MAIN CONTENT ==== -->
    <main class="container mt-4">
        
        <!-- Page Header -->
        <section id="page-header" class="text-center py-4" data-aos="fade-up">
            <h1 class="display-5 fw-bold text-white">About Me & Social Activities</h1>
        </section>
        
        <!-- 1. Section: About Me (Glass Card) -->
        <section id="about-me-text" class="mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="glass-card">
                <h3 class="fw-bold text-white mb-3">About Me</h3>
                <p id="about-me-content" class="lead text-white-50" style="font-size: 1.1rem;"></p>
            </div>
        </section>

        <!-- 2. Section: Future Goal (Green Card) -->
        <section id="future-goal-text" class="mb-5" data-aos="fade-up" data-aos-delay="200">
            <div class="hero-card">
                <h3 class="mb-3">Career Goal</h3>
                <p id="future-goal-content" class="mb-0"></p>
            </div>
        </section>
        
        <!-- 3. Section: Social Activities (Dynamic) -->
        <section id="social-activities-container">
            <!-- Content will be loaded here via JS -->
        </section>

    </main>
    
    <!-- ==== FOOTER ==== -->
    <footer class="footer">
        <div class="container text-center">
            <span class="text-muted">¬© @DateTime.Now.Year √ñmer Faruk T√ºreg√ºn. All rights reserved.</span>
        </div>
    </footer>
    
    <!-- Bootstrap & AOS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- MAIN SCRIPT (Fetch Data from JSON) -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            AOS.init({
                duration: 600,
                once: true
            });
            
            fetchAboutData();
        });

        async function fetchAboutData() {
            try {
                const response = await fetch('/data-en/about.json');
                if (!response.ok) throw new Error('Data could not be retrieved');
                
                const data = await response.json();
                
                // 1. Fill About Me Text
                // (Convert \n from JSON to <br> to preserve paragraphs)
                document.getElementById('about-me-content').innerHTML = data.aboutMeText.replace(/\n/g, '<br />');
                
                // 2. Fill Future Goal Text
                document.getElementById('future-goal-content').innerHTML = data.futureGoalText.replace(/\n/g, '<br />');

                // 3. Fill Social Activities (Kƒ∞HMED, ƒ∞zmitg√ºc√º)
                const container = document.getElementById('social-activities-container');
                container.innerHTML = ''; // Clear
                
                data.socialActivities.forEach((activity, index) => {
                    container.innerHTML += createSocialActivityHTML(activity, index);
                });

                // IMPORTANT: ASP.NET Tag Helpers (~) don't work inside JS.
                // We need to fix all image paths manually.
                fixImagePaths(container);

                setTimeout(() => { AOS.refresh(); }, 100);

            } catch (error) {
                console.error('Error loading about data:', error);
                document.getElementById('social-activities-container').innerHTML = '<p class="text-danger text-center">An error occurred while loading content.</p>';
            }
        }
        
        // Function to create Social Activity Card (with Carousel) HTML
        function createSocialActivityHTML(activity, index) {
            
            // Create Carousel Content (Images)
            const carouselItemsHTML = activity.carouselImages.map((imgUrl, i) => {
    
                let correctedImgUrl = imgUrl.startsWith('~/') ? imgUrl.substring(1) : imgUrl;

                return `
                <div class="carousel-item ${i === 0 ? 'active' : ''}">
                    <img src="${correctedImgUrl}" class="d-block w-100" alt="${activity.title} Fotoƒüraf ${i + 1}">
                </div>
                `;
            }).join('');
            
            // Create Carousel Control Buttons (Arrows)
            const carouselControlsHTML = `
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-${activity.id}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-${activity.id}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            `;
            
            // Create text content (description)
            const contentHTML = activity.description.join('\n');

            // Create 2-column (Image / Text) structure
            return `
            <div class="row g-4 g-lg-5 mb-5 align-items-center" data-aos="fade-up" data-aos-delay="${index * 100}">
                
                <!-- Column 1: Carousel -->
                <div class="col-lg-6">
                    <div id="carousel-${activity.id}" class="carousel slide social-carousel" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            ${carouselItemsHTML}
                        </div>
                        ${carouselControlsHTML}
                    </div>
                </div>
                
                <!-- Column 2: Description -->
                <div class="col-lg-6">
                    <div class="content-area">
                        <h2 class="display-6 fw-bold text-white mb-3">${activity.title}</h2>
                        ${contentHTML}
                    </div>
                </div>
            </div>
            `;
        }

        // Function to fix '~/img/...' paths to '/img/...' inside JS
        function fixImagePaths(container) {
            const images = container.querySelectorAll('img');
            images.forEach(img => {
                let src = img.getAttribute('src');
                if (src && src.startsWith('~/')) {
                    img.setAttribute('src', src.substring(1)); // Remove '~' character
                }
            });
        }
    </script>
    
</body>
